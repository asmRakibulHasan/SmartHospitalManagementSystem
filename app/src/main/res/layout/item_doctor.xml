<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_background"
    android:padding="12dp">

    <!-- Doctor image -->
    <ImageView
        android:id="@+id/imgDoctor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/doctor_photo_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Doctor Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Eleanor Pena"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imgDoctor"
        app:layout_constraintTop_toTopOf="@id/imgDoctor"
        app:layout_constraintEnd_toStartOf="@id/btnBook" />

    <!-- Specialist -->
    <TextView
        android:id="@+id/tvSpecialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gynecologist"
        android:textColor="@color/label_color"
        android:textSize="13sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/imgDoctor"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <!-- Rating -->
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating 4.0"
        android:textColor="@color/hint_color"
        android:textSize="13sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/imgDoctor"
        app:layout_constraintTop_toBottomOf="@id/tvSpecialist" />

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btnBook"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:text="Book Now"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
