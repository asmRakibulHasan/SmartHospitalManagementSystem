<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:background="@drawable/patient_request_background"
    android:padding="12dp">

    <!-- Patient Image -->
    <ImageView
        android:id="@+id/iv_patient"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@drawable/doctor_photo_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Patient Name -->
    <TextView
        android:id="@+id/tv_patient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mrs. Sarah Mac"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/iv_patient"
        app:layout_constraintTop_toTopOf="@id/iv_patient"
        app:layout_constraintEnd_toStartOf="@id/btn_accept" />

    <!-- Schedule -->
    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday, evening"
        android:textColor="@color/label_color"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_patient"
        app:layout_constraintTop_toBottomOf="@id/tv_patient_name" />

    <!-- Accept Button -->
    <Button
        android:id="@+id/btn_accept"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:text="Accept"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
