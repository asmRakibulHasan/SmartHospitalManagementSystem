<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".BookingFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnPayNow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Appointment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/label_color"
                android:layout_marginBottom="24dp" />

            <!-- Doctor Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDoctorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Sarah Mitchell"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvDoctorSpecialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ophthalmologist"
                        android:textSize="16sp"
                        android:textColor="@color/label_color"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Chamber Location -->
            <TextView
                android:id="@+id/tvChamberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chamber Location"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvChamberLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Medical Center\n123 Medical Street, Dhaka"
                android:textSize="16sp"
                android:textColor="@color/label_color"
                android:layout_marginBottom="24dp" />

            <!-- Date Selection -->
            <TextView
                android:id="@+id/tvSelectDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Appointment Date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDatePicker"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/edittext_background"
                android:hint="Select date"
                android:textColorHint="@color/hint_color"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:layout_marginBottom="24dp" />

            <!-- Time Selection -->
            <TextView
                android:id="@+id/tvSelectTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Available Time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Pay Now Button -->
    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Pay Now"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
