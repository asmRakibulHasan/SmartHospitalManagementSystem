<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginFragment">

    <!-- Top Curved Background -->
    <View
        android:id="@+id/view_curved_background"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/curved_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toggle Buttons Container -->
    <LinearLayout
        android:id="@+id/ll_toggle_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/toggle_background"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Patients Toggle Button -->
        <Button
            android:id="@+id/btn_toggle_patients"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Patients"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/toggle_button_selected"
            android:layout_marginEnd="2dp" />

        <!-- Doctor Toggle Button -->
        <Button
            android:id="@+id/btn_toggle_doctor"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Doctor"
            android:textColor="@color/toggle_text_unselected"
            android:textSize="16sp"
            android:background="@drawable/toggle_button_unselected"
            android:layout_marginStart="2dp" />

    </LinearLayout>

    <!-- Login Title -->
    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patients Login"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ll_toggle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Form Container -->
    <LinearLayout
        android:id="@+id/ll_form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/view_curved_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- User Name Field -->
        <TextView
            android:id="@+id/tv_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/label_color"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter your email"
            android:textColorHint="@color/hint_color"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp" />

        <!-- Password Field -->
        <TextView
            android:id="@+id/tv_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/label_color"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_background"
                android:hint="Enter your password"
                android:textColorHint="@color/hint_color"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:inputType="textPassword" />



        </RelativeLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
