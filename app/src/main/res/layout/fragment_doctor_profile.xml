<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".DoctorProfileFragment">

    <!-- Doctor Image -->
    <ImageView
        android:id="@+id/imgDoctor"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:contentDescription="Doctor Photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/doctor_photo_background" />

    <!-- Doctor Name -->
    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Sarah Mitchell"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Doctor Specialty -->
    <TextView
        android:id="@+id/tvDoctorSpecialty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ophthalmologist"
        android:textSize="18sp"
        android:textColor="@color/label_color"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Rating Section -->
    <LinearLayout
        android:id="@+id/llRatingSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvDoctorSpecialty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Rating Stars -->
        <LinearLayout
            android:id="@+id/llStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="2dp"
                app:tint="#FFD700" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="2dp"
                app:tint="#FFD700" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="2dp"
                app:tint="#FFD700" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="2dp"
                app:tint="#FFD700" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_outline"
                app:tint="#FFD700" />

        </LinearLayout>

        <!-- Rating Text -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/hint_color" />

    </LinearLayout>

    <!-- Doctor Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvDoctorDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/llRatingSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Experience -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_experience"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/label_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10+ Years Experience"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/label_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Medical Center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Availability -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/label_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Today"
                    android:textSize="16sp"
                    android:textColor="@color/label_color"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Book Now"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
